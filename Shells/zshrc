## Default stuff ğŸ’¾
export EDITOR="/usr/local/bin/nvim"

## Syntax ğŸŒˆ
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

## Cowsay ğŸ”
fortune -s | cowsay -f moose | lolcat --seed=100

## Starship ğŸš€
eval "$(starship init zsh)"

## Aliases ğŸ”¥

# Zsh ğŸ¦€
alias zshconfig="/usr/local/bin/nvim $HOME/.zshrc"
alias reloadzsh="source $HOME/.zshrc"

# Sudo -s instead of su and sudo ğŸ¦¸
aliases['su'] = 'sudo -s'
aliases['sudo'] = 'sudo -s'

# Tree/List ğŸŒ²
alias ls="exa -Ga --icons"
alias tree="exa -1aT --icons"

# Make parent dir with mkdir ğŸ‘´
alias mkdir="mkdir -pv"

# Safety ğŸ˜·
alias mv="mv -i"
alias cp="cp -i"
alias rm="rm -i"
alias ln="ln -i"
